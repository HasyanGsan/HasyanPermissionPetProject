<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_request_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Camera"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_permission_camera" />

    <Button
        android:id="@+id/button_permission_camera"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Feature #1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_request_audio_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Audio and Location"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_permission_camera"/>

    <Button
        android:id="@+id/button_permission_audio_location"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Feature #2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_request_audio_location"/>


</androidx.constraintlayout.widget.ConstraintLayout>